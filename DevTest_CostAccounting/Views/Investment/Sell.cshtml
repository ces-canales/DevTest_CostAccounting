@model SellInvestmentModel

@{
    ViewData["Title"] = "Sell";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sell</h1>

<h4>SellInvestmentDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Sell">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                @Html.DropDownListFor(model => model.ClientId, (IEnumerable<SelectListItem>)ViewData["ClientList"], "[Select Client]", new { @class = "form-control" })
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                @Html.DropDownListFor(model => model.CompanyId, (IEnumerable<SelectListItem>)ViewData["CompanyList"], "[Select Company]", new { @class = "form-control" })
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label><br />
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shares" class="control-label"></label>
                <input asp-for="Shares" class="form-control" />
                <span asp-validation-for="Shares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MethodId" class="control-label"></label>
                @Html.DropDownListFor(model => model.MethodId, (IEnumerable<SelectListItem>)ViewData["AccountingMethods"], "[Select AccountingMethod]", new { @class = "form-control" })
                <span asp-validation-for="MethodId" class="text-danger"></span>
            </div>
            <div>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">Results
        <div class="form-group">
            <label asp-for="TrxResult.SharesRemainingTotal" class="control-label"></label>
            <input asp-for="TrxResult.SharesRemainingTotal" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TrxResult.SharesRemainingLastInvestment" class="control-label"></label>
            <input asp-for="TrxResult.SharesRemainingLastInvestment" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TrxResult.SharesRemainingCostBasis" class="control-label"></label>
            <input asp-for="TrxResult.SharesRemainingCostBasis" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TrxResult.SaleProfit" class="control-label"></label>
            <input asp-for="TrxResult.SaleProfit" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TrxResult.SaleCostBasis" class="control-label"></label>
            <input asp-for="TrxResult.SaleCostBasis" class="form-control" />
        </div>
    </div>
</div>
<div>
    <br />
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
